{
    "dockerFile": "Dockerfile",
    "runArgs": [
        "--network=host",
        "--ipc=host",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "--runtime=nvidia",
        "--privileged",
        "--volume=/dev:/dev",
        "--volume=/run/udev/control:/run/udev/control",
        "--name=furuta_pendulum_devcontainer",
        "--env=DISPLAY=${localEnv:DISPLAY}",
        "--env=NVIDIA_VISIBLE_DEVICES=all",
        "--env=NVIDIA_DRIVER_CAPABILITIES=all",
        "--env=RMW_IMPLEMENTATION=rmw_cyclonedds_cpp",
    ],
    // assuming that directory structure on host is ros2_ws/src/furuta_pendulum
    // when mounting whole workspace it won't be necessary to rebuild it every time
    "workspaceMount": "src=${localWorkspaceFolder}/../..,dst=/home/maciej/ros2_ws/,type=bind",
    "workspaceFolder": "/home/maciej/ros2_ws/src/furuta_pendulum",
    "extensions": [
        "aaron-bond.better-comments",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "eamodio.gitlens",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-iot.vscode-ros",
        "smilerobotics.urdf",
        "redhat.vscode-yaml"
    ],
    "remoteUser": "maciej",
}